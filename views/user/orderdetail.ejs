    <section class="section dashboard position-relative" style="top:70px">
      <div class="row">
        <div class="col-12">
          <div class="card ">
            <div class="card-body ">
              <div class="col-12 d-flex justify-content-center  mt-3 ">
                <div class="container">
                  <div class="row">
                    <div class="col-12 col-md-10 hh-grayBox pt45 pb20">
                      <div class="row d-flex  justify-content-center ">
                        <% if(pd.deliveryDate&&pd.confirmDate){ %>
                          <div class="order-tracking completed">
                            <span class="is-complete"></span>
                            <p>Ordered<br><span id="date"><%= orderDate  %></span></p>
                          </div>
                          <div class="order-tracking completed">
                            <span class="is-complete"></span>
                            <p>Confirmed<br><span><%= pd.confirmDate.toLocaleString('en-US', { dateStyle: 'long' }) %></span></p>
                          </div>
                          <div class="order-tracking completed">
                            <span class="is-complete"></span>
                            <p>Delivered<br><span><%= pd.deliveryDate.toLocaleString('en-US', { dateStyle: 'long' }) %></span></p>
                          </div>
                        <% }else if(pd.confirmDate){%>
                          <div class="order-tracking completed">
                            <span class="is-complete"></span>
                            <p>Ordered<br><span id="date"><%= orderDate  %></span></p>
                          </div>
                          <div class="order-tracking completed">
                            <span class="is-complete"></span>
                            <p>confirmed<br><span><%= pd.confirmDate.toLocaleString('en-US', { dateStyle: 'long' }) %></span></p>
                          </div>
                          <div class="order-tracking">
                            <span class="is-complete"></span>
                            <p>Delivered<br><span></span></p>
                          </div>
                        <% }else if(orderDate){ %>
                          <div class="order-tracking completed">
                            <span class="is-complete"></span>
                            <p>Ordered<br><span id="date"><%= orderDate  %></span></p>
                          </div>
                          <div class="order-tracking">
                            <span class="is-complete"></span>
                            <p>Shipped<br><span></span></p>
                          </div>
                          <div class="order-tracking">
                            <span class="is-complete"></span>
                            <p>Delivered<br><span></span></p>
                          </div>
                        <% }%>

                        
                        
                       
                      </div>
                    </div>
                  </div>
                </div>
                
              </div>
          
            </div>
            
          </div>
          <div class="card ">
            <div class="card-body ">
              <div class="col-12 d-flex justify-content-start  mt-3 ">
                <div class="d-flex " style="width: 400px;">
                  <img src="/images/<%= pd.image %>" style="width: 120px;" alt="">
                  <div class="mt-3 ms-2">
                    <h6 id="pdname"><%= pd.productId.productName  %></h6>
                    <p>â‚¹<%= pd.price.toLocaleString('hi') %></p>
                    <p >quantity : <span id="pdq">
                      <%= pd.quantity  %>
                    </span></p>
                  </div>
                  <div class="d-none " id="orderId">
                    <%= pd._id  %>
                  </div>
                  <div class="d-none " id="pdprice">
                    <%= pd.price  %>
                  </div>
                  <div class="d-none " id="coupon">
                    <%= coupon  %>
                  </div>

                  <div class="d-none " id="orderId">
                    <%= pd.orderId  %>
                  </div>
                  
                </div>
                
                <div class="" style="width: 180px;">
                  <div class="fw-bold mb-3 ">
                    status
                  </div>
                

                    <% if(pd.status == 'cancelled') {%>
                      <span class="badge bg-danger">
                        <%= pd.status %>
                      </span>
                    <%}else if(pd.status=='confirmed'){%>
                      <span class="badge bg-warning ">
                        <%= pd.status %>
                      </span>
                    <%}else if(pd.status=='shipped'){%>
                      <span class="badge bg-info ">
                        <%= pd.status %>
                      </span>
                    <%}else if(pd.status=='delivered'){%>
                      <span class="badge bg-success">
                      <%= pd.status %>
                      </span>
                
                      <% if(checkDate&&(new Date() < checkDate)){%>
                      <button type="button" class="btn btn-warning"   data-bs-toggle="modal" data-bs-target="#returnReason">
                        return
                      </button>
                      <% }  %>

                    <%}else if(pd.status == 'Order Placed') {%>
                      <span class="badge bg-success p-2 bg-opacity-25 text-success  ">
                        <%= pd.status %>
                      </span>
                      <a href="/user/orders/cancelorders/<%= pd._id  %>">
                        <button id="cancelOrder" class="btn btn-danger ">
                          cancel
                        </button>
                      </a>
                    <% }else if(pd.status == 'returned') {%>
                      <span class="badge bg-warning  ">
                        <%= pd.status %>
                      </span>
                    <% }else if(pd.status == 'return request'){ %>
                      <span class="badge bg-warning  ">
                        <%= pd.status %>
                      </span>
                    <% }else if(pd.status == 'Payment Failed'){ %>
                      <span class="badge bg-secondary bg-opacity-25  p-2 text-black  ">
                        <%= pd.status %>
                      </span>
                      <a href="/user/orders/cancelorders/<%= pd._id %>">
                        <button id="cancelOrder" class="btn btn-danger p-1 ">
                          cancel
                        </button>
                      </a>
                      <div class="d-flex justify-content-center mt-2 ">
                    
                        <button class="btn btn-secondary shadow-sm rounded-pill " id="continuePayment" data-path="<%= pd._id  %>">
                          Pay now
                        </button>
                        
                      </div>
                      
                    <% }else{%>
                      <span class="badge bg-secondary p-2 rounded-pill   ">
                        <%= pd.status %>
                      </span>
                    <% }  %>
                
                </div>
                <div class="border-start  border-dark">
                </div>
                <div class="ms-3 ">
                  <h5 class="fw-bold ">Delivery Address</h5>

                  <div id="name"> <%= address.name  %>,</div>
                  <div id="address"><%= address.street  %>,</div>
                  <div id="zip"> <%= address.pincode  %>,</div>
                  <div class="d-flex ">
                    <div id="city"><%= address.city %>, </div>
                    <div id="country"> <%= address.state  %></div>
                  </div>
                  
                 
                  
                 

                </div>
              </div>
          
            </div>
            
          </div>
          <button id="invoice">
            download invoice
          </button>
            
         
        </div><!-- End Left side columns -->
      </div>
    </section>

  </main><!-- End #main -->
  <!-- Button trigger modal -->




  <div class="modal fade" id="returnReason" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">New message</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/user/orders/returnorder/<%= pd._id %>" method="post">
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">Recipient:</label>
              <input type="text" class="form-control" name="return" id="recipient-name">
            </div>
            <button type="submit" class="btn btn-primary">Send message</button>
       
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          
          
        </div>
      </div>
    </div>
  </div>

