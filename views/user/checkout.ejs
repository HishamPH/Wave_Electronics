  <style>
    .coupon-card {
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      width: 200px;
    }
  
    .coupon-card::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 300%;
      background: linear-gradient(to bottom right,
          rgba(255, 255, 255, 0.3) 0%,
          rgba(255, 255, 255, 0.1) 50%,
          transparent 100%);
      transform: rotate(45deg);
      animation: lustre 5s infinite linear;
    }
  
    @keyframes lustre {
      0% {
        top: -50%;
        left: -50%;
      }
  
      100% {
        top: 150%;
        left: 150%;
      }
    }
  
    .coupon-card.expired {
      background-color: #b0504e;
      /* Light red */
    }
  
    .coupon-card.active {
      background-color: #10bd10;
      /* Light green */
    }
  
    .coupon-card.unavailable {
      background-color: #D3D3D3;
      /* Light gray */
    }
  </style>
    
</head>

