<%- include('../essentials/userHeader') %>
  
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>
  <%- include('../essentials/loader') %>
  <header id="header" class="header fixed-top d-flex align-items-center bg-black " style="height: 90px;">

    <div class="d-flex align-items-center justify-content-between ms-3 ">
      <div class="col-lg-4  d-flex align-items-center">
        <a href="/" class="text-decoration-none">
          <span class="h2 text-uppercase text-warning bg-dark px-2">WAVE</span>
          <span class="h2 text-uppercase text-dark bg-warning px-2 ml-n1">ELECTRONICS</span>
        </a>
        
      </div>
      
    </div><!-- End Logo -->

 

    

  </header>  


  <div class="container login-container">
    <div class="login-form">
        <h2>Login</h2>
        <form id="login-form">
            <div class="form-group">
              <label for="email-input">Username:</label>
              <input id="email-input" type="email" name="username" class="input-text" placeholder="Enter your username" required />
              <small class="text-danger" id="emailError"></small>
            </div>
            
            <div class="form-group">
              <label for="password-input">Password:</label>
              <input id="password-input" type="password" name="password" class="input-text" placeholder="Enter your password" required />
              <small class="text-danger" id="passwordError"></small>
            </div>
            <div class="register-link">
              <p class="text-black mt-1 ">Don't have an account? &nbsp;&nbsp;<a href="/user/signup">Register</a></p>
            </div>
            
            <button id="login-button" type="submit" class="btn btn-primary w-100 rounded-0" data-mdb-ripple-init>login</button>
        </form>
    </div>
  </div>

<script type="module" src="/js/formValidation.js" defer></script>


  <%- include('../essentials/userFooter') %>
</body>
</html>