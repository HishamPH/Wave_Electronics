      <h1 class=" fw-bolder ">wishlist</h1>
      <div class="row">
        <%if(wish && wish.length > 0){%>
          <%wish.forEach((item)=>{ %>
            <div class="col-md-6 col-12 ">
            <div class="card mb-3">
              <div class="card-body ">
                <div class="col-12 d-flex justify-content-between mt-3 ">
                  <div class="d-flex ">
                    <div style="width: 120px; height: 120px;">
                      <img src="/images/<%= item.product.images[0]  %>" alt="" class="img-fluid ">
                      </div>
                      <div class="ms-4 mt-3 ">
                      <p><%= item.product.ProductName %></p>
                      <h5>â‚¹<%= item.product.Price  %></h5>
                      </div>
                  </div>
                  <a href="/user/wishlist/delete/<%= item._id  %>">
                    <i class="bi bi-trash text-danger bg"></i>
                  </a>
                  
                </div>
                
                
              </div>
              
            </div>
            </div>
          <%})%>
        <%}else{%>
          <h1 class="mt-5 d-flex justify-content-center align-items-center fw-bolder">
            Your wishlist is Empty
          </h1>
        <%}  %>
       <!-- End Left side columns -->
      </div>
    </section>

