<%- include('../essentials/userHeader') %>
    
</head>

<body>
  <%- include('../essentials/loader') %>
    <!-- Topbar Start -->

    <header id="header" class="header fixed-top d-flex align-items-center bg-black justify-content-between " style="height: 90px;">

        <div class="d-flex align-items-center justify-content-between">
          <div class="col-lg-4  d-flex align-items-center">
            <a href="/" class="text-decoration-none">
              <span class="h2 text-uppercase text-warning bg-black px-2">WAVE</span>
              <span class="h2 text-uppercase text-black bg-warning px-2 ml-n1">ELECTRONICS</span>
            </a>
            
          </div>
          
        </div><!-- End Logo -->
    
        <div class="search-bar">
          <form class="search-form d-flex align-items-start " action="" method="get">
            <input type="search" name="name" placeholder="Search" title="Enter search keyword" id="" onclick="">
            <button type="submit" title="Search"><i class="bi bi-search"></i></button>
          </form>
        </div><!-- End Search Bar -->
        <div class="d-flex justify-content-end">
          
            <a href="/user/login"><button class="btn btn-primary rounded-pill mx-3">Login</button></a>
            <a href="/user/signup"><button class="btn btn-secondary rounded-pill me-3">SignUp</button></a>
          
            
        </div>
        
    
    </header>


   




   
   
    <div class="container  position-relative" style="top:110px">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
         
         <div class="carousel-inner ">
           <div class="carousel-item active">
             <img src="/img/banner_1.jpg" class="d-block w-100 " alt="...">
             <div class="carousel-caption d-none d-md-block">
               <h2>Samsung Galaxy s23 Ultra</h2>
               <p>Shop galaxy watch 5 with s23 and get upto benfits of ₹12,000</p>
             </div>
           </div>
           
           <div class="carousel-item">
             <img src="/img/banner_3.jpg" class="d-block w-100 " alt="...">
             <div class="carousel-caption d-none d-md-block">
               <h2>Apple iPhone 15 pro max</h2>
               <p>...</p>
             </div>
           </div>
         </div>
        
       </div>
     </div>
     <div class="container mt-5 position-relative" style="top: 100px;">
      
        <div class="row" id="searchResult">
          
        <% pd.forEach((row,index)=>{%>
          <div class="col-xl-3 col-lg-4 col-md-6 ">
            <div class="card rounded-0 ">
              <% if (row.offer) { %>
                <span class="badge position-absolute  p-2  bg-danger w-auto rounded-0  " style="top: 15px; right: 15px;">
                   - <%= row.offer.percentage %>%
                </span>
                
              <% } %>
              <img src="/images/<%= row.defaultVariant.images[0]  %>" class="card-img-top card-img-auto" alt="Product Image" style="object-fit: cover;">
              <div class="card-body bg-white p-3">
                <a href="/user/detail-guest/<%= row._id %>">
                    <div class="card-title m-0 p-0 text-truncate fw-bold "><%= row.productName  %></div>
                    <p class="card-text m-0 fw-bold text-dark">₹<%= row.defaultPrice.toLocaleString('hi')  %></p>
                    <p class="card-text text-black "><%= row.spec1 %></p>
                    
                </a>
                <div class="d-flex justify-content-between">
                  
                    <a href="/user/login" class="text-white"><button class="btn py-3 btn-dark rounded-pill text-white" data-mdb-ripple-init>Add to cart</button></a>
                 
                </div>
              </div>
            </div>
          </div>
          <%});%>
       
        </div>
    </div>
   

    <%- include('../essentials/footer') %>
   
   

    <!-- Back to Top -->
    <button href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></button>
    <script src="/js/cartCount.js" defer></script>



<%- include('../essentials/userFooter') %>
