<%- include('../essentials/adminHeader') %>
  <%- include('../essentials/adminLayout') %>

  
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Offers</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/panel">Home</a></li>
          <li class="breadcrumb-item active">Offers</li>
        </ol>
      </nav>
      
      
    </div><!-- End Page Title -->
    <div class="d-flex justify-content-end ">
      <button type="button" class="btn btn-primary mb-3 " data-mdb-toggle="modal" data-mdb-target="#offerModal" data-mdb-ripple-init data-mdb-modal-init>
        Add Offer
      </button>
    </div>
    <% if(offer){%>
    <table class="table table-bordered table-hover mt-3">
      <thead class="table-dark">
          <tr class="text-center ">
             
              <th>Offertype</th>
              <th>discount</th>
              <th>start date</th>
              <th>Expiry date</th>
              <th style="width: 150px;">Status</th>
              <th style="width: 160px;">Action</th>
          </tr>
      </thead>
      <tbody class="align-middle text-center ">
        <% offer.forEach((row,index)=>{ %>
        <tr>
         
          <td>
            <%= row.category.Name %>
          </td>
          <td>
            <%= row.percentage  %>
          </td>
          <td><%= row.startDate.toJSON().slice(0,10) %></td>
          <td><%= row.endDate.toJSON().slice(0,10) %></td>
          <td>
            <%= row.status %>
          </td>
          <td>
            <button type="button" class="btn btn-secondary  mb-3 rounded-pill" data-mdb-toggle="modal" data-mdb-target="#offerEditModal" data-mdb-ripple-init data-mdb-modal-init>
              Edit
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table> 
    <% }  %>

    <% offer.forEach((row)=>{%>
    <div class="modal fade" id="offerEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Edit offer</h5>
            <button type="button" class="btn-close" data-mdb-dismiss="modal"></button>
          </div>
          <div class="modal-body">
                               
            <form action="/admin/offers/edit/<%= row._id %>" method="post">
              <div class="form-group">
                <label for="category">Category:</label>
                <select class="" id="category" name="category" value="<%= row.category.Name %>">
                  <option disabled><%= row.category.Name %></option>
                  <%cat.forEach((x) => {%>
                      <option><%=x.categoryName%></option>
                  <%})%>
                </select>
              </div>
              <div class="form-group">
                <label for="discount">discount:</label>
                <input type="number" name="discount" class="form-control bg-light" id="discount"
                value="<%= row.percentage %>"/>
              </div>
              

              <div class="form-group">
                <label for="start">start date:</label>
                <input type="date" name="start" class="form-control bg-light" id="start"
                value="<%= row.startDate %>" required />
              </div>
              <div class="form-group">
                <label for="expire">expire date:</label>
                <input type="date" name="expire" class="form-control bg-light" id="expire"
                value="<%= row.endDate %>" required />
              </div>
            
              <div class="d-flex justify-content-center mb-3">
                <button type="submit" class="btn btn-primary mt-3 mb-0">Edit Offer</button>
              </div>
            </form>
           
          </div>
          
        </div>
      </div>
    </div>
    <% }) %>
    <div class="modal fade" id="offerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Create new offer</h5>
          <button type="button" class="btn-close" data-mdb-dismiss="modal"></button>
          </div>
          <div class="modal-body">
                               
            <form action="/admin/offers/addoffer" method="post">
              <div class="form-group">
                <select class="" id="category" name="category" required>
                  <option disabled>Select a category</option>
                  <%cat.forEach((x) => {%>
                      <option><%=x.categoryName%></option>
                  <%})%>
                </select>
              </div>
              <div class="form-group">
                <label for="discount">discount:</label>
                <input type="number" name="discount" class="form-control bg-light" id="discount"
                    placeholder="Enter discount" required />
              </div>
              
              <div class="form-group">
                <label for="start">start date:</label>
                <input type="date" name="start" class="form-control bg-light" id="start"
                    placeholder="Enter start" required />
              </div>
              <div class="form-group">
                <label for="expire">expire date:</label>
                <input type="date" name="expire" class="form-control bg-light" id="expire"
                    placeholder="Enter the expire" required />
              </div>
              <div class="d-flex justify-content-center mb-3">
                <button type="submit" class="btn btn-primary mt-3 mb-0">Add Offer</button>
              </div>
            </form>
           
          </div>
          
        </div>
      </div>
    </div>
  </main>
    <!-- ======= Footer ======= -->
  

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <script type="module" src="/js/admin/offer.js" defer></script>
  <!-- Template Main JS File -->
 
<%- include('../essentials/adminFooter') %>