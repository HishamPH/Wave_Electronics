  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Orders</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/panel">Home</a></li>
          <li class="breadcrumb-item active">Orders</li>
        </ol>
      </nav>
      
      
    </div><!-- End Page Title -->
    
    <table class="table table-bordered table-hover mt-3">
      <thead class="table-dark">
          <tr>
              <th>Order Id</th>
              <th>User Name</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Order Date</th>
              <th>Status</th>
              <th>Action</th>
              <th>Details</th>
          </tr>
      </thead>
      <tbody>
        <% orders.forEach((row,index)=>{ %>
        <tr>
          <td><%= index+1 %></td>
          <td><%=  row.userId.name%></td>
          <td><%= row.items.reduce((acc,item)=>acc+=item.quantity,0) %></td>
          <td><%= row.totalPrice %></td>
          <td><%= row.orderDate.toJSON().slice(0,10) %>,<%= row.orderDate.toJSON().slice(11,16) %>
          </td>
          <% if(row.status === 'Order Placed'){%>
          <td>
            <div class="badge bg-primary ">
              <%= row.status  %>
            </div>
          </td>
          <td>
            <form id="myForm" action="/admin/orders/changestatus/<%= row._id %>" method="post">
              <select class="" name="status" id="status" onchange="this.form.submit()" >
                <option value="action">action</option>
                <option value="confirmed">confirmed</option>
                <option value="shipped">shipped</option>
                <option value="delivered">delivered</option>
              </select>
            </form>
          </td>
          <% }else if(row.status === 'confirmed'){ %>
            <td>
              <div class="badge bg-warning ">
                <%= row.status  %>
              </div>
            </td>
            <td>
              <form id="myForm" action="/admin/orders/changestatus/<%= row._id %>" method="post">
                <select class="" name="status" id="status" onchange="this.form.submit()" >
                  <option value="action">action</option>
                  <option value="shipped">shipped</option>
                  <option value="delivered">delivered</option>
                </select>
              </form>
            </td>
          <% }else if(row.status === 'shipped'){ %>
            <td>
              <div class="badge bg-info ">
                <%= row.status  %>
              </div>
            </td>
            <td>
              <form id="myForm" action="/admin/orders/changestatus/<%= row._id %>" method="post">
                <select class="" name="status" id="status" onchange="this.form.submit()" >
                  <option value="action">action</option>
                  <option value="delivered">delivered</option>
                </select>
              </form>
            </td>
          <% }else if(row.status === 'delivered'){ %>
            <td>
              <div class="badge bg-success">
                <%= row.status  %>
              </div>
            </td>
            <td>
              no action
            </td>
          <% }else if(row.status === 'cancelled'){ %>
          <td>
            <div class="badge bg-danger ">
              <%= row.status  %>
            </div>
          </td>
          <td>
            no action
          </td>
          <% } %>  
          <td>
            <a href="/admin/orderdetails/<%= row._id %>">
              <button class="btn btn-secondary ">
                order details
              </button>
            </a>
            
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table> 
    


