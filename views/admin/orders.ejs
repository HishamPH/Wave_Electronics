  <script src="/js/main.js"></script>
  <script>
    $(document).ready(()=>{
        $("table").DataTable({
            order:[0,'asc'],
            columnDefs: [{ 
              targets: [0,2,3], 
              className: "text-center" 
            }]
        })
    })
  </script>
