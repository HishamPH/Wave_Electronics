    </ul>

  </aside><!-- End Sidebar-->
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Orders</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/panel">Home</a></li>
          <li class="breadcrumb-item active">Orders</li>
        </ol>
      </nav>
      
      
    </div><!-- End Page Title -->
    
    <table class="table table-bordered table-hover mt-3" style="">
      <thead class="table-secondary ">
          <tr class="text-center ">
              <th>Order Id</th>
              <th>User Name</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Order Date</th>
              
              <th>Details</th>
          </tr>
      </thead>
      
      <tbody>
        
        <% orders.forEach((row,index)=>{ %>
        
          <tr class="align-middle text-center ">
            <td><%= index+1 %></td>
            <td><%=  row.userId.name%></td>
            <td><%= row.items.reduce((acc,item)=>acc+=item.quantity,0) %></td>
            <td><%= row.totalPrice.toLocaleString('hi') %></td>
            <td><%= row.orderDate.toJSON().slice(0,10) %>,<%= row.orderDate.toJSON().slice(11,16) %>
            </td>
            
            <td>
              <a href="/admin/orderdetails/<%= row._id %>">
                <button class="btn btn-secondary ">
                  order details
                </button>
              </a>
              
            </td>
          </tr>
       
        
        <% }) %>
        
      </tbody>
    </table> 
    


    <!-- ======= Footer ======= -->
  

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

