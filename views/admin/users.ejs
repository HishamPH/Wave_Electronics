<%- include('../essentials/adminHeader') %>
<%- include('../essentials/adminLayout') %>


  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Users</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/panel">Home</a></li>
          <li class="breadcrumb-item active">users</li>
        </ol>
      </nav>
      
    </div><!-- End Page Title -->
    <table class="table table-striped table-group-divider   table-hover mt-3">
      <thead class="table-warning ">
        <tr>
          <th>Serial No</th>
          <th>Name</th>
          <th>email</th>
          <th style="width:100px;">status</th>
        </tr>
      </thead>
      <tbody class="table-group-divider ">
        <% user.forEach((row,index) => { %>
            <tr class="align-middle">
              <td class="ps-4 "><%= index+1 %></td>
              <td><%= row.name %></td>
              <td><%= row.email %></td>
              <td>                                    
                <a href="/admin/users/<%= row._id%>">
                  <% if(row.status){ %>
                  <button class="btn btn-success rounded-pill ">active
                  </button>
                  <% }else{ %>
                  <button class="btn btn-danger rounded-pill">blocked
                  </button>
                  <% } %>
                </a>                                    
              </td>
            </tr>
        <% }) %>
    </tbody>
    </table> 
    


    <!-- ======= Footer ======= -->


  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

 
  <!-- Template Main JS File -->
<%- include('../essentials/adminFooter') %>