  <script defer>
    let hello = '<%= dates %>';
    let dates = hello.split(',');
    let hi = '<%= pdCount %>'
    let pdCount = hi.split(',');
    const data = {

      labels: dates,
      datasets: [{
        label: 'Sales Count',
        data: pdCount,
        backgroundColor: 'rgba(255, 99, 132, 0.2)',
        borderColor: 'rgba(255, 99, 132, 1)',
        borderWidth: 1
      }]
    };
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'bar',
      data: data,
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>




