    <%- include('../essentials/adminLayout') %>


    <main id="main" class="main">

    <div class="pagetitle">
        <h1>Products</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/panel">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/products">products</a></li>
                <li class="breadcrumb-item active">add product</li>
            </ol>
        </nav>


    </div><!-- End Page Title -->
    <div class="d-flex"></div>
    <div class="col-md-12 d-flex justify-content-center">

    <form class="card p-4 bg-white mb-3 text-dark shadow-md" id="editProduct" data-product-id="<%= pd._id %>">
        <h2 class="text-center mb-4">Edit Product</h2>

        <!-- Categories -->
        <div class="row mb-4">
            <div class="col-md-6 offset-md-3">
                <div class="form-outline bg-muted shadow-sm" data-mdb-input-init>
                    <input type="text" name="category" id="category" class="form-control" value="<%= pd.category.categoryName %>">
                    <label class="form-label" for="category">Category</label> 
                </div>
            </div>
        </div>

        <!-- Product Name and Description -->
        <div class="row mb-4">
            <div class="col-md-6 mb-4 mb-md-0">
                <div class="form-outline bg-muted shadow-sm" data-mdb-input-init>
                    <input type="text" name="productName" id="productName" class="form-control" value="<%= pd.productName %>" required/>
                    <label class="form-label" for="productName">Product Name</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-outline bg-light shadow-sm" data-mdb-input-init>
                    <textarea class="form-control" name="description" id="productDescription"
                        rows="3" required><%= pd.description %></textarea>
                    <label class="form-label" for="productDescription">Product Description</label>
                </div>
            </div>
        </div>

        <!-- Specifications -->
        <div class="row mb-4">
            <h4 class="mb-3"><i class="fas fa-list me-2"></i>Specifications</h4>
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="form-outline bg-light" data-mdb-input-init>
                    <textarea class="form-control" name="spec1" id="Specification1" rows="3" required><%= pd.spec1 %></textarea>
                    <label class="form-label" for="Specification1">Specification 1</label>
                </div>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="form-outline bg-light" data-mdb-input-init>
                    <textarea class="form-control" name="spec2" id="Specification2" rows="3" required><%= pd.spec2 %></textarea>
                    <label class="form-label" for="Specification2">Specification 2</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-outline bg-light" data-mdb-input-init>
                    <textarea class="form-control" name="spec3" id="Specification3" rows="3" required><%= pd.spec3 %></textarea>
                    <label class="form-label" for="Specification3">Specification 3</label>
                </div>
            </div>
        </div>

        <!-- Images -->


        <!-- Pricing and Stock -->
        <div class="row mb-4">
            <h4 class="mb-3"><i class="fas fa-tag me-2"></i>Pricing and Stock</h4>
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="form-outline bg-light" data-mdb-input-init>
                    <input type="number" name="basePrice" id="basePrice" class="form-control" value="<%= pd.basePrice %>" required/>
                    <label class="form-label" for="basePrice" >Base Price</label>
                </div>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="form-outline bg-light" data-mdb-input-init>
                    <input type="number" name="discount" id="discountAmount" class="form-control" required value="<%= pd.discount %>" />
                    <label class="form-label" for="discountAmount">Discount Percentage</label>
                </div>
            </div>
        </div>





        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-4">Product Variants</h5>

                <!-- Variant Buttons -->
                <div class="mb-4">
                    <!-- Color Variant Button -->
                    <button type="button" class="btn btn-primary me-2" data-mdb-toggle="modal"
                        data-mdb-target="#variantModal" data-mdb-ripple-init data-mdb-modal-init>
                        Add Variant
                    </button>

                </div>

                <!-- Variants Display Area -->
                <div class="row">
                    <!-- Color Variants -->
                    <div class="col-md-6">
                        <h6>Variants</h6>
                        <div id="variants" class="variant-container mb-3">

       
                            <!-- Color variants will be populated here -->
                        </div>
                    </div>

                </div>

                <!-- Hidden inputs to store selected variants -->
                <input type="hidden" name="selectedVariant" id="selectedVariant">
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg" data-mdb-ripple-init>
                <i class="fas fa-save me-2"></i>Edit Product
            </button>
        </div>
    </form>

    </div>
        <!-- </main> -->
<div id="initial-data" data-variant='<%= JSON.stringify(pd.variant) %>'></div>



    </main>

            <!-- ======= Footer ======= -->


            <!--Add Color Variant Modal -->
    <div class="modal fade" id="variantModal" tabindex="-1" aria-labelledby="variantModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Variant</h5>
                    <button type="button" class="btn-close" data-mdb-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="variantForm">
                        <div class="mb-3">
                            <label class="form-label">Color</label>
                            <input type="text" class="form-control" id="variantColor" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Storage</label>
                            <input type="text" class="form-control" id="variantStorage" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price Adjustment</label>
                            <input type="number" class="form-control" id="variantPrice" value="0">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stock Adjustment</label>
                            <input type="number" class="form-control" id="variantStock" value="0">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="variantDefault">
                            <label class="form-check-label">Set as Default</label>
                        </div>

                        <div class="row mb-4">
                            <h4 class="mb-3"><i class="fas fa-images me-2"></i>Product Images</h4>
                            <div class="col-md-4 mb-4 mb-md-0">
                                <div class="card p-2 bg-light" style="width: fit-content;">
                                    <label for="image1" class="square-input" id="imageLabel1">
                                        <input type="file" name="image1" class="form-control d-none imageInput"
                                            id="image1" accept="image/*" required
                                            onchange="openCropper(this, 'imagePreview1')" />
                                        <img src="" alt="Image Preview" class="img-fluid imagePreview"
                                            id="imagePreview1" style="display: none;" />
                                        <span class="placeholder-text" id="placeholder1">Click to upload</span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4 mb-md-0">
                                <div class="card p-2 bg-light" style="width: fit-content;">
                                    <label for="image2" class="square-input" id="imageLabel2">
                                        <input type="file" name="image2" class="form-control d-none imageInput"
                                            id="image2" accept="image/*" required
                                            onchange="openCropper(this, 'imagePreview2')" />
                                        <img src="" alt="Image Preview" class="img-fluid imagePreview"
                                            id="imagePreview2" style="display: none;" />
                                        <span class="placeholder-text" id="placeholder2">Click to upload</span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4 mb-md-0">
                                <div class="card p-2 bg-light" style="width: fit-content;">
                                    <label for="image3" class="square-input" id="imageLabel3">
                                        <input type="file" name="image3" class="form-control d-none imageInput"
                                            id="image3" accept="image/*" required
                                            onchange="openCropper(this, 'imagePreview3')" />
                                        <img src="" alt="Image Preview" class="img-fluid imagePreview"
                                            id="imagePreview3" style="display: none;" />
                                        <span class="placeholder-text" id="placeholder3">Click to upload</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div id="croppingSection" style="display: none;">
                    <h5>Crop Image</h5>
                    <div class="cropper-container">
                        <img id="cropperImage" src="" alt="Cropper Image" class="img-fluid" />
                    </div>
                    <button type="button" class="btn btn-secondary mt-3"
                        onclick="cancelCropping()">Cancel</button>
                    <button type="button" class="btn btn-primary mt-3" onclick="cropImage()">Crop and
                        Save</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="addVariant">Add Variant</button>
                </div>
            </div>
        </div>
    </div>

   


