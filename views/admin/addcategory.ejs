<%- include('../essentials/adminHeader') %>
<%- include('../essentials/adminLayout') %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Category</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/panel">Home</a></li>
          <li class="breadcrumb-item active">category</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <div class="d-flex"></div>
    <div class="container mt-3">
      <div class="d-flex justify-content-between">
          <h1 class="icons">Categories</h1>
      </div>
      
      <hr>
    </div>
    <div class="container">
      <div class="row">
          <div class="col-md-6 mx-auto">
              <h3 class="mt-5 text-center ">ADD CATEGORY</h3>
              <form action="/admin/addcategory" method="post"  class="icons p-3" id="categoryForm">
                <div class="py-2">
                  <label for="categoryName">Category Name:</label>
                  <input
                      type="text"
                      name="categoryName"
                      class="form-control"
                      id="categoryName"
                      placeholder="Enter Category name"
                      required
                  />
                </div>
                  <button type="submit" class="btn btn-primary mt-3">Add Category</button>
                  <button type="reset" class="btn btn-danger mt-3">Clear</button>
              </form>
          </div>
      </div>
    </div>

   </main> 
    <!-- ======= Footer ======= -->
 

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

 
  <!-- Template Main JS File -->
  <script defer>
    $(document).ready(function () {
      $("#categoryForm").submit(function (e) {
        const categoryName = $("#categoryName").val().trim();
        if (categoryName === "" || categoryName.length === 0) {
          alert("Category name is required.");
          e.preventDefault();
          return false;
        }
        const invalidChars = /[^a-zA-Z0-9\s]/;
        if (invalidChars.test(categoryName)) {
          alert("Category name should only contain letters, numbers, and spaces.");
          e.preventDefault();
          return false;
        }
        return true;
      });
    });
  </script>
